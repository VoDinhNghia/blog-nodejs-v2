<div class="col-sm-4 text-center">
    <br>
    <% if(data_user[0].avatar!= '') {%>
        <div class="fakeimg_avata">
            <img src="<%= data_user[0].avatar %>" alt="image" width="230px" height="225px">
        </div>
        <% }else { 
            if(data_user[0].gender == 1) {%>
            <div class="fakeimg_avata">
                <img src="/images/male-avatar.png" alt="image" width="230px" height="225px">
            </div>
            <% } else{%>
                <div class="fakeimg_avata">
                    <img src="/images/female-avatar.jpg" alt="image" width="230px" height="225px">
                </div>
                <%}}%>

                    <br>
                    <ul class="nav nav-pills flex-column text-center text-info">
                        <li class="nav-item"><br>
                            <p>Name:
                                <%= data_user[0].name %>
                            </p>
                        </li>
                        <li class="nav-item">
                            <p>Gender:
                                <% if(data_user[0].gender == 0) {%>
                                    Female
                                    <% }else{ %>
                                        Male
                                        <%}%>

                            </p>
                        </li>
                        <li class="nav-item">
                            <p>Email:
                                <%= data_user[0].email %>
                            </p>
                        </li>
                        <li class="nav-item">
                            <p>Mobile: 0
                                <%= data_user[0].mobile %>
                            </p>
                        </li>
                        <li class="nav-item">
                            <p>Country:
                                <%= data_user[0].country %>
                            </p>
                        </li>
                    </ul>
                    <hr class="d-sm-none">
                    <% if (follow.length > 0) {%>
                        <a href="/remove_follow/<%= data_user[0].ID %>"><button class="btn btn-success mr-2">
                        unfollow
                    </button></a>
                        <% }else {%>
                            <a href="/follow/<%= data_user[0].ID %>"><button class="btn btn-success mr-2">
                        follow
                    </button></a>
                            <%}%>

                                <button type="button" class="btn btn-primary mr-2" data-toggle="modal" data-target="#viewimage">
                        view image
                    </button>
                                <!-- Modal -->
                                <div class="modal" id="viewimage" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-lg modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title text-info" id="exampleModalLabel">View image</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                    </button>
                                            </div>
                                            <div class="modal-body">
                                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                                    <div class="carousel-inner">
                                                        <% if(data.length) { %>
                                                            <% if(data[0].image != ''){ %>
                                                                <div class="carousel-item active">
                                                                    <a href="/info_post/<%= data[0].ID %>" class="text-white">
                                                        <img class="d-block w-100" src="<%= data[0].image %>" alt="image" height="400px">
                                                        </a>
                                                                    <br>
                                                                    <p>
                                                                        <button class="btn btn-primary mr-2">
                                                                <a href="/info_post/<%= data[0].ID %>" class="text-white">Detail post</a>
                                                            </button>
                                                                    </p>
                                                                </div>
                                                                <% } %>

                                                                    <% for(let k = 1; k < data.length; k++){ %>
                                                                        <% if(data[k].image != ''){ %>
                                                                            <div class="carousel-item">
                                                                                <a href="/info_post/<%= data[k].ID %>" class="text-info">
                                                                    <img class="d-block w-100" src="<%= data[k].image %>" alt="image" height="400px">
                                                                    </a>
                                                                                <br>
                                                                                <p>
                                                                                    <button class="btn btn-primary mr-2">
                                                                            <a href="/info_post/<%= data[k].ID %>" class="text-white">Detail post</a>
                                                                        </button>
                                                                                </p>
                                                                            </div>
                                                                            <%} } } else {%>
                                                                                <p>not found</p>
                                                                                <% } %>
                                                    </div>
                                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                        <span class="sr-only">Previous</span>
                                                    </a>
                                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                        <span class="sr-only">Next</span>
                                                    </a>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <button type="button" class="btn btn-danger mr-2" data-toggle="modal" data-target="#reply_contact<%= data_user[0].ID%>">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-chat-text-fill" viewBox="0 0 16 16">
                        <path d="M16 8c0 3.866-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.584.296-1.925.864-4.181 1.234-.2.032-.352-.176-.273-.362.354-.836.674-1.95.77-2.966C.744 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7zM4.5 5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7zm0 2.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7zm0 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4z"/>
                    </svg>
                        </button> <br>

                                <!-- Modal -->
                                <div class="modal" id="reply_contact<%= data_user[0].ID%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <form action="/send_message" method="POST">
                                                <div class="modal-header">
                                                    <h6 class="modal-title text-info" id="exampleModalLabel">Send messager to
                                                        <span class="text-danger">
                                                                        <%= data_user[0].name%>
                                                                    </span>
                                                    </h6>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                            </button>
                                                </div>
                                                <div class="modal-body">
                                                    <input type="text" name="id_contact" value=" <%= data_user[0].ID%>" style="display: none;">
                                                    <textarea class="form-control" name="content_reply" id="exampleFormControlTextarea1" rows="5"></textarea>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Send</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <br>
                                <hr>
</div>