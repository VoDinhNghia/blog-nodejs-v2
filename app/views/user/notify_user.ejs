<!DOCTYPE html>
<html lang="en">

<head>
    <title>home</title>
    <%- include("./header") %>
</head>

<body>

    <%- include("./menu") %>
        <div class="container" style="margin-top:70px">
            <div class="row">
                <%- include("./content_left") %>
                    <div class="col-sm-8">
                        <h5 class="text-center text-danger">Detail notify</h5>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(detail_notify.length){ 
                                    for(var i = detail_notify.length-1;i >= 0 ;i--) { %>
                                    <tr>
                                        <td class="text-danger">
                                            <%=  %>.</td>
                                        <td>
                                            <% for(var j = 0; j < info_user.length ;j++) {
                                            if(info_user[j].ID == detail_notify[i].ID_user){ %>
                                                <span style="color: green;"><%= info_user[j].name%></span>
                                                <%   }
                                        } %> has <span style="color: red;">
                                                    <% if(detail_notify[i].type == 0) { %>
                                                        like
                                                        <%} else if(detail_notify[i].type == 1) { %>
                                                            comments
                                                            <% } else { %>
                                                                share
                                                                <%}%></span> post '
                                                    <%= detail_notify[i].title%>' at
                                                        <%= detail_notify[i].date_implement%>
                                        </td>

                                        <td>
                                            <a href="/detail_notify/<%= detail_notify[i].ID_post%>/<%= detail_notify[i].ID%>" style="color: white;"><button type="button" class="btn btn-success float-right">Detail</button></a>
                                        </td>

                                    </tr>
                                    <% }
                                                                        }else{ %>
                                        <tr>
                                            <td colspan="3">Not found.</td>
                                        </tr>
                                        <% } %>
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
        <%- include("./footer") %>
</body>

</html>