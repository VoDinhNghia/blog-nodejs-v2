<!DOCTYPE html>
<html lang="en">

<head>
    <title>home</title>
    <%- include("./header") %>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
</head>

<body>

    <%- include("./menu") %>
        <div class="container" style="margin-top:70px">
            <div class="row">
                <div class="container">

                    <!-- Page header start -->
                    <div class="page-title">
                        <div class="row mr-2">
                            <% if(all_user_mess.length){ 
                                    for(var i = 0;i < all_user_mess.length ;i++) { %>
                                <span>
                                        <a href="/mess_of_user/<%= all_user_mess[i].ID%>">
                                            <div class="user" >
                                                <% if(all_user_mess[i].avatar != ""){%>
                                                    <img src="<%= all_user_mess[i].avatar%>" alt="Retail Admin" width="25" height="25" class="rounded-circle" >
                                                    <%}else{
                                                        if(all_user_mess[i].gender == 1){%>
                                                        <img src="/images/female-avatar.jpg" alt="Retail Admin" width="25" height="25" class="rounded-circle">
                                                        <%}else{%>
                                                            <img src="/images/male-avatar.png" alt="Retail Admin" width="25" height="25" class="rounded-circle">
                                                            <%}}%>
                                                                <% if(all_user_mess[i].status == 0){%>
                                                                    <img src="/images/red_off.png" alt="" width="8" height="8" class="rounded-circle">
                                     <%}else {%>
                                             <img src="/images/green_act.png" alt="" width="8" height="8" class="rounded-circle">
                                    <% }%>
                            </div>
                            <p class="name-time ">
                                <span class="name "><%= all_user_mess[i].name%></span>
                                </p>
                                </a>
                                </span>
                                <% }
                                                       } else{ %>
                                    <p class="text-danger">Nobody user</p>
                                    <% }; %>

                        </div>
                    </div>
                    <!-- Page header end -->

                    <!-- Content wrapper start -->
                    <div class="content-wrapper">

                        <!-- Row start -->
                        <div class="row gutters">

                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                                <div class="card m-0">

                                    <!-- Row start -->
                                    <div class="row no-gutters">
                                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-3 col-3">
                                            <div class="users-container">
                                                <div class="chat-search-box">
                                                    <div class="input-group">
                                                        <input class="form-control" placeholder="Search">
                                                        <div class="input-group-btn">
                                                            <button type="button" class="btn btn-info">
                                                <i class="fa fa-search"></i>
                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <ul class="users">
                                                    <% if(mess.length){ 
                                                        for(var i = mess.length-1;i >=0  ;i--) { %>
                                                        <li class="person" data-chat="person1">
                                                            <a href="/mess_of_user/<%= mess[i].ID%>">
                                                                <div class="user">
                                                                    <% if(mess[i].avatar != ""){%>
                                                                        <img src="<%= mess[i].avatar%>" alt="Retail Admin">
                                                                        <%}else{
                                                                        if(mess[i].gender == 1){%>
                                                                            <img src="/images/female-avatar.jpg" alt="Retail Admin">
                                                                            <%}else{%>
                                                                                <img src="/images/male-avatar.png" alt="Retail Admin">
                                                                                <%}}%>
                                                                                    <% if(mess[i].status == 0){%>
                                                                                        <span class="status busy "></span>
                                                                                        <%}else {%>
                                                                                            <span class="status online "></span>
                                                                                            <% }%>
                                                                </div>
                                                                <p class="name-time ">
                                                                    <span class="name "><%= mess[i].name%></span>
                                                                </p>
                                                            </a>
                                                        </li>
                                                        <% }
                                                       } else{ %>
                                                            <p>Not found message</p>
                                                            <% }; %>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-9 col-9 ">
                                            <div class="selected-user ">
                                                <span>To: <span class="name text-danger">  
                                                <% if(mess_user.length){ 
                                                 if (mess_user[0].ID_user_send != avatar_home.ID) {%>
                                                    <%= mess_user[0].name%>
                                                <% }else {%>
                                                    <%= mess_user[1].name%>
                                                    <%}}%>
                                                </span>
                                            </div>
                                            <div class="chat-container ">
                                                <ul class="chat-box chatContainerScroll ">
                                                    <% if(mess_user.length){ 
                                                for(var i = 0;i < mess_user.length  ;i++) { %>
                                                        <% if (mess_user[i].ID_user_send != avatar_home.ID) {%>
                                                            <li class="chat-left ">
                                                                <div class="chat-avatar ">
                                                                    <% if(mess_user[i].avatar != ""){%>
                                                                        <img src="<%= mess_user[i].avatar%>" alt="Retail Admin">
                                                                        <%}else{
                                                                             if(mess_user[i].gender == 0){%>
                                                                            <img src="/images/female-avatar.jpg" alt="Retail Admin">
                                                                            <%}else{%>
                                                                                <img src="/images/male-avatar.png" alt="Retail Admin">
                                                                                <%}}%>
                                                                                    <div class="chat-name ">
                                                                                        <%= mess_user[i].name%>
                                                                                    </div>
                                                                </div>
                                                                <div class="chat-text ">
                                                                    <%= mess_user[i].content_mess%>
                                                                </div>
                                                                <div class="chat-hour ">
                                                                    <%= mess_user[i].date_mess%><span class="fa fa-check-circle "></span></div>
                                                            </li>
                                                            <% } else{%>
                                                                <li class="chat-right ">

                                                                    <div class="chat-text ">
                                                                        <%= mess_user[i].content_mess%>
                                                                            <br>
                                                                            <div class="chat-hour ">
                                                                                <%= mess_user[i].date_mess%><span class="fa fa-check-circle "></span></div>
                                                                    </div>
                                                                    <div class="chat-avatar ">
                                                                        <% if(mess_user[i].avatar != ""){%>
                                                                            <img src="<%= mess_user[i].avatar%>" alt="Retail Admin">
                                                                            <%}else{
                                                                             if(mess_user[i].gender == 0){%>
                                                                                <img src="/images/female-avatar.jpg" alt="Retail Admin">
                                                                                <%}else{%>
                                                                                    <img src="/images/male-avatar.png" alt="Retail Admin">
                                                                                    <%}}%>
                                                                                        <div class="chat-name ">
                                                                                            <%= mess_user[i].name%>
                                                                                        </div>
                                                                    </div>
                                                                </li>
                                                                <% } %>
                                                                    <%}
                                                       } else{ %>
                                                                        <p>Not found message</p>
                                                                        <% }; %>
                                                </ul>
                                                <form action="/reply_message" method="POST">
                                                    <div class="form-group mt-3 mb-0 ">
                                                        <% if(mess_user.length){ 
                                                         if (mess_user[0].ID_user_send != avatar_home.ID) {%>
                                                            <input type="text" name="id_get" value="<%= mess_user[0].ID_user_send%>" style="display: none;">
                                                            <% }else {%>
                                                                <input type="text" name="id_get" value="<%= mess_user[1].ID_user_send%>" style="display: none;">
                                                                <%}}%>
                                                                    <textarea class="form-control" name="content_mess" rows="3 " placeholder="Type your message here... "></textarea><br>
                                                                    <button type="submit" class="btn btn-danger float-right">Send</button><br><br>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Row end -->
                                </div>

                            </div>

                        </div>
                        <!-- Row end -->

                    </div>
                    <!-- Content wrapper end -->

                </div>
            </div>
        </div>
        <%- include("./footer")%>
</body>

</html>