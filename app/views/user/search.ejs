<!DOCTYPE html>
<html lang="en">

<head>
    <title>home</title>
    <%- include("./header") %>
</head>

<body>

    <%- include("./menu") %>
        <div class="container" style="margin-top:70px">
            <div class="row">
                <%- include("./content_left") %>
                    <div class="col-sm-8">
                        <br>
                        <h5 class="text-center text-danger">Result search author</h5><br>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Country</th>
                                    <th>messager</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data_user.length){ 
                                    for(var i = 0;i < data_user.length;i++) { %>
                                    <tr>
                                        <td class="text-danger">
                                            <%=i+1 %>.</td>
                                        <td class="text-info">
                                            <a href="/info_personel/<%= data_user[i].ID %>">
                                                <% if(data_user[i].avatar != '') { %>
                                                    <img src="<%= data_user[i].avatar%>" alt="" width="30" height="30" class="rounded-circle">
                                                    <% }else {
                                                         if(data_user[i].gender == 1) {%>
                                                        <img src="/images/male-avatar.png" alt="" width="30" height="30" class="rounded-circle">
                                                        <% } else{%>
                                                            <img src="/images/female-avatar.jpg" alt="" width="30" height="30" class="rounded-circle">
                                                            <% }}%>
                                                                <span><%= data_user[i].name %></span>
                                            </a>
                                        </td>
                                        <td class="text-info">
                                            <a href="https://mail.google.com/">
                                                <%= data_user[i].email%>
                                            </a>
                                        </td>

                                        <td>
                                            0<span><%= data_user[i].mobile%></span>
                                        </td>
                                        <td>
                                            <%= data_user[i].country%>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#reply_contact<%= data_user[i].ID%>">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-chat-text-fill" viewBox="0 0 16 16">
                        <path d="M16 8c0 3.866-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.584.296-1.925.864-4.181 1.234-.2.032-.352-.176-.273-.362.354-.836.674-1.95.77-2.966C.744 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7zM4.5 5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7zm0 2.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7zm0 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4z"/>
                    </svg>
                                            </button> <br>

                                            <!-- Modal -->
                                            <div class="modal" id="reply_contact<%= data_user[i].ID%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <form action="/send_message" method="POST">
                                                            <div class="modal-header">
                                                                <h6 class="modal-title text-info" id="exampleModalLabel">Send messager to
                                                                    <span class="text-danger">
                                                                        <%= data_user[i].name%>
                                                                    </span>
                                                                </h6>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <input type="text" name="id_contact" value=" <%= data_user[i].ID%>" style="display: none;">
                                                                <textarea class="form-control" name="content_reply" id="exampleFormControlTextarea1" rows="5"></textarea>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                <button type="submit" class="btn btn-primary">Send</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }
                                                                        }else{ %>
                                        <tr>
                                            <td colspan="3">Not found.</td>
                                        </tr>
                                        <% } %>
                            </tbody>
                        </table>
                        <h5 class="text-center text-danger">Result search post</h5>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>title</th>
                                    <th>date_post</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data_post.length){ 
                                    for(var i = 0;i < data_post.length;i++) { %>
                                    <tr>
                                        <td class="text-danger">
                                            <%=i+1 %>.</td>
                                        <td class="text-info">
                                            <a href="/info_post/<%= data_post[i].ID %>">
                                                <%= data_post[i].title%>
                                            </a>
                                        </td>
                                        <td>
                                            <%= data_post[i].date_post%>
                                        </td>
                                    </tr>
                                    <% }
                                                                        }else{ %>
                                        <tr>
                                            <td colspan="3">Not found.</td>
                                        </tr>
                                        <% } %>
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
        <%- include("./footer") %>
</body>

</html>